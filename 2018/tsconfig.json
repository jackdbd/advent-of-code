{
    "compilerOptions": {
      "diagnostics": false,
      "listEmittedFiles": true,
      "listFiles": false,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "outDir": "dist",
      "removeComments": true,
      "rootDir": "src",
      "strict": true,
      "strictNullChecks": true,
      "target": "es5",
      "typeRoots" : ["./node_modules/@types", "./typings"]
    },
    "include": [
      "src/**/*"
    ]
}